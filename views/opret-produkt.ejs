                  <option value="Elektronik">Elektronik</option>
                  <option value="V√•ben">V√•ben</option>
                  <option value="K√∏kkenudstyr">K√∏kkenudstyr</option>
                  <option value="Instrumenter">Instrumenter</option>
                  <option value="Dekoration">Dekoration</option>
                </select>
              </div>
            </div>
          </div>

          <!-- M√• renoveres checkbox -->
          <div class="border-t-2 border-gold pt-6">
            <div class="flex items-start">
              <input 
                type="checkbox" 
                id="maa_renoveres" 
                name="maa_renoveres" 
                value="true"
                class="mt-1 w-5 h-5 text-burgundy border-gray-300 rounded focus:ring-burgundy"
              >
              <label for="maa_renoveres" class="ml-3 block text-gray-700">
                <span class="font-semibold text-lg">M√• renoveres til andet projekt</span>
                <p class="text-sm text-gray-600 mt-1">
                  Marker dette felt hvis produktet m√• males om, √¶ndres eller tilpasses til andre teatres behov og projekter
