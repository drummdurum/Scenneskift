  </section>

  <!-- Main Content -->
  <main class="min-h-screen py-12 bg-cream">
    <div class="content-container max-w-3xl">
      <div class="bg-white rounded-lg shadow-xl p-8 border-4 border-gold">

        <% if (fejl) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            <%= fejl %>
          </div>
        <% } %>

        <% if (success) { %>
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            <%= success %>
          </div>
        <% } %>

        <form action="/opret-produkt" method="POST" class="space-y-6">
          <div>
            <label for="navn" class="block text-gray-700 font-semibold mb-2 text-lg">Produktnavn *</label>
            <input 
              type="text" 
              id="navn" 
              name="navn" 
              required
              placeholder="F.eks. Venetiansk Maske"
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-burgundy focus:outline-none transition text-lg"
            >
          </div>

          <div>
            <label for="beskrivelse" class="block text-gray-700 font-semibold mb-2 text-lg">Beskrivelse *</label>
            <textarea 
              id="beskrivelse" 
              name="beskrivelse" 
              required
              rows="4"
              placeholder="Beskriv rekvisiten i detaljer..."
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-burgundy focus:outline-none transition text-lg"
            ></textarea>
          </div>

