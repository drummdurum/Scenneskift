<%- include('partials/header', { bruger, currentPage: 'produkter', title: 'Produkter' }) %>

  <!-- Hero Section -->
  <section class="relative text-white min-h-[70vh] flex items-center overflow-hidden" style="background-image: url('/images/hero/theater-3527307_1280.webp'); background-size: cover; background-position: center; background-repeat: no-repeat; margin-top: -80px; padding-top: 80px;">
    <!-- Dark overlay for better text readability -->
    <div class="absolute inset-0 bg-black bg-opacity-60"></div>
    
    <div class="content-container py-20 relative z-20">
      <div class="text-center">
      <h2 class="text-6xl font-bold text-gold mb-4 drop-shadow-2xl">üé≠ Vores Kollektion</h2>
      <p class="text-2xl text-cream drop-shadow-lg">Udvalgte rekvisitter til din forestilling</p>
    </div>
  </div>
  </section>

  <!-- Products Main -->
  <main class="min-h-screen py-12 bg-cream">
    <div class="content-container">

      <!-- Products Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% produkter.forEach(produkt => { %>
          <a href="/produkt/<%= produkt.id %>" class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 block">
            <!-- Product Image -->
            <div class="h-64 bg-gradient-to-br from-burgundy to-gray-900 flex items-center justify-center border-b-4 border-gold relative overflow-hidden">
              <span class="text-8xl opacity-30">üé≠</span>
              <% if (produkt.billede && !produkt.billede.includes('placeholder')) { %>
                <img src="<%= produkt.billede %>" alt="<%= produkt.navn %>" class="absolute inset-0 w-full h-full object-cover">
              <% } %>
            </div>

            <!-- Product Content -->
            <div class="p-6">
              <h3 class="text-2xl font-bold text-burgundy mb-3"><%= produkt.navn %></h3>
              <p class="text-gray-700 mb-4 leading-relaxed"><%= produkt.beskrivelse %></p>
              
              <% if (produkt.lokation) { %>
                <p class="text-lg font-semibold text-burgundy mb-4">üìç <%= produkt.lokation %></p>
              <% } %>
              
              <!-- Availability indicator -->
              <% 
                const idag = new Date().toISOString().split('T')[0];
                const erReserveret = produkt.reservationer && produkt.reservationer.some(res => {
                  return idag >= res.fraDato && idag <= res.tilDato;
                });
              %>
              <div class="flex items-center mb-4">
                <span class="w-3 h-3 rounded-full <%= erReserveret ? 'bg-red-500' : 'bg-green-500' %> mr-2"></span>
                <span class="text-sm <%= erReserveret ? 'text-red-600' : 'text-green-600' %> font-semibold">
                  <%= erReserveret ? 'Reserveret i dag' : 'Tilg√¶ngelig' %>
                </span>
              </div>
              
              <div class="w-full bg-burgundy text-cream py-3 px-6 rounded font-bold uppercase tracking-wider text-center">
                Se Detaljer
              </div>
            </div>
          </a>
        <% }); %>
      </div>

      <% if (bruger && bruger.rolle !== 'admin') { %>
        <div class="mt-12 text-center">
          <a href="/opret-produkt" class="inline-block bg-gold text-gray-900 px-8 py-4 rounded font-bold uppercase tracking-wider hover:bg-opacity-90 transition shadow-lg">
            + Opret Nyt Produkt
          </a>
        </div>
      <% } %>
    </div>
  </main>

<%- include('partials/footer', { bruger }) %>
